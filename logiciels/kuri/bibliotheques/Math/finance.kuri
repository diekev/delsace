fonc covariance(
		cours1 : []r32,
		moyenne1 : r32,
		cours2 : []r32,
		moyenne2 : r32) : (r32, z64)
{
	taille = min(cours1.taille, cours2.taille);
	dyn res : r32;

	pour i dans 0 ... taille - 1 {
		res += (cours1[i] - moyenne1) * (cours2[i] - moyenne2);
	}

	res /= transtype(taille : r32);

	retourne res, taille;
}
