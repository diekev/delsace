// Structures de bases pour contenir les informations d'un type.

id_info :: énum : z32 {
    ENTIER    := 0
	RÉEL      := 1
	BOOLÉEN   := 2
	CHAINE    := 3
	POINTEUR  := 4
	STRUCTURE := 5
	FONCTION  := 6
	TABLEAU   := 7
	EINI      := 8
	RIEN      := 9
	ÉNUM      := 10
	OCTET     := 11
}

InfoType :: struct {
	id : id_info
	taille_en_octet : n32
}

InfoTypeEntier :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	est_signé : bool
}

InfoTypeRéel :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32
}

InfoTypePointeur :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	type_pointé : *InfoType
	est_référence : bool
}

InfoTypeTableau :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	type_pointé : *InfoType
}

InfoTypeMembreStructure :: struct {
	nom : chaine
	id : *InfoType
	décalage : z64 // décalage en octets dans la structure
	//drapeaux : n32
}

InfoTypeStructure :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	nom : chaine
	membres : []*InfoTypeMembreStructure
}

InfoTypeFonction :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	types_entrée : []*InfoType
	types_sortie : []*InfoType
	est_coroutine : bool
}

InfoTypeÉnum :: struct {
	id : id_info // employant InfoType
	taille_en_octet : n32

	nom : chaine
	valeurs : []z32 // À FAIRE typage selon énum
	noms : []chaine
	est_drapeau : bool
}
