BCrypt_taille_tampon :: fonc externe () -> z64

BCrypt_genere_empreinte :: fonc externe (mot_de_passe: *z8, charge_travail: z32, sortie: *z8) -> rien

BCrypt_compare_empreinte :: fonc externe (mot_de_passe: *z8, empreinte: *z8) -> z32

