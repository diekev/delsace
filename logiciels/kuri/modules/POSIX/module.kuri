importe Fondation

getenv :: fonc externe (nom: *z8) -> *z8
getuid :: fonc externe () -> z32

chaine_environnement :: fonc (nom: chaine) -> chaine
{
    chn := getenv(nom.pointeur)

    saufsi chn {
        retourne ""
    }

    retourne converti_chaine_c(chn)
}

est_utilisateur_racine :: fonc() -> bool
{
    retourne getuid() == 0
}
