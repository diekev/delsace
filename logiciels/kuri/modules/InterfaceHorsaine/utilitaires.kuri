{
    discr copie_enchaineuse_fichier(enchaineuse, chemin) {
        Quelque(err) {
            si err != 0 comme ErreurFichier {
                compilatrice_rapporte_erreur("impossible d'ouvrir le fichier")
            }
        }
        sinon {}
    }
}

