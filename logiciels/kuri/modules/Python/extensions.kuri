    si info == info_de(n16) {
        retourne "PyUnicodeEnum_Value_n16"
    }
    si info == info_de(n32) {
        retourne "PyUnicodeEnum_Value_n32"
    }
    si info == info_de(n64) {
        retourne "PyUnicodeEnum_Value_n64"
    }
    retourne "PyUnicodeEnum_Value"
}

