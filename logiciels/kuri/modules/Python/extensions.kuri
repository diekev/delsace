PyUnicodeEnum_Check :: fonc (object: *PyObject, info: *InfoTypeÉnum) -> bool
{
    saufsi PyUnicode_Check(object) {
        retourne faux
    }

    chn := PyUnicode_AsChaine(object)

    pour info.noms {
        si it == chn {
            retourne vrai
        }
    }

    retourne faux
}

