    //         propriétés.style.valeurs[IDPropriété.MarginRight] = ValeurDeStyle(mot_clé = PROP_auto)
    //     }
    // }

    /* À FAIRE : utilise les bonnes formules.
     * https://www.w3.org/TR/2011/REC-CSS2-20110607/visudet.html#Computing_widths_and_margins */
    calcule_largeur_et_marges(noeud, containing_block.donne_largeur())
    calcule_hauteur_et_marges(noeud)

    // si noeud.élément && noeud.élément.local_name == HTML.TAG_div {
    //     attribut_align := HTML.donne_attribut(noeud.élément, HTML.ATTR_align)
    //     si attribut_align.possède_valeur() {
    //         alignement := attribut_align.Quelque
