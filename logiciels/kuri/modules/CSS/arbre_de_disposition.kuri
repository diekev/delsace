noeud_disposition_remplacement_sur_mesure :: fonc (base: *NoeudDeDisposition, ctx: *ContexteDeFormattage)
{
    noeud := base comme *NoeudDeDispositionRemplacement

    containing_block := donne_containing_block(noeud, ctx)

    modifie_marges_pour_alignement_forcé(ctx, noeud)

    calcule_largeur_et_marges(noeud, containing_block)
    calcule_hauteur_et_marges(noeud, containing_block)
}

noeud_disposition_remplacement_sur_divise_en_lignes :: fonc (base: *NoeudDeDisposition, enligneuse: *Enligneuse, ctx: *ContexteDeFormattage)
{
    noeud_disposition_remplacement_sur_mesure(base, ctx)

    noeud := base comme *NoeudDeDispositionRemplacement
    largeur := noeud.propriétés.donne_valeur_utilisée(IDPropriété.Width).number comme r32
    hauteur := noeud.propriétés.donne_valeur_utilisée(IDPropriété.Height).number comme r32

    _ := enligneuse.ajoute_fragment(noeud, 0, 0, hauteur, largeur)
}

