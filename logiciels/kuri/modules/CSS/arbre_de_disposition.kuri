ItératriceArbre :: struct {
    racine: *NoeudDeDisposition
}

opérateur pour :: fonc (itératrice: ItératriceArbre) -> *NoeudDeDisposition
{
    pile: Pile(*NoeudDeDisposition)
    diffère détruit(pile)

    pile.empile(itératrice.racine)

    index: z64

    tantque !pile.est_vide() {
        enfant := pile.dépile()

        `it = enfant
        `index_it = index

        #corps_boucle

        pour > enfant.enfants {
            pile.empile(it)
        }

        index += 1
    }
}

