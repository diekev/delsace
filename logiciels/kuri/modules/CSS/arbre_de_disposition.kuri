// À FAIRE : standardise (https://html.spec.whatwg.org/multipage/rendering.html#the-select-element-2)
donne_select_labels_width :: fonc (noeud: *NoeudDeDispositionSelect, ctx: *ContexteDeFormattage) -> r32
{
    réinitialise(noeud)

    select := noeud.élément comme *HTML.HTMLSelectElement

    option := donne_première_option(select)
    saufsi option {
        retourne 0.0
    }

    noeud.texte = HTML.donne_contenu_texte_descandants(option)
    si noeud.texte.taille() == 0 {
        retourne 0.0
    }

    fragmente_texte_avec_espaces_blanches_ascii(noeud.texte, *noeud.fragments)
    collapse_séquences_d_espaces_blanches_autour_bris_segments(noeud.fragments)
    collapse_bris_segments(noeud.fragments, PROP_normal)
    convertis_tabulations_en_espaces(noeud.fragments)
    collapse_espaces_consécutives(noeud.fragments)

    fonte := détermine_fonte(noeud, ctx)

    résultat := 0.0

    pour noeud.fragments {
        résultat += donne_largeur_texte(fonte, it.texte) comme r32
    }

    retourne résultat
}

donne_première_option :: fonc (select: *HTML.HTMLSelectElement) -> *HTML.HTMLOptionElement
{
    pour select.enfants {
        saufsi HTML.est_élément(it) {
            continue
        }

        élément := it comme *HTML.Élément
        si élément.local_name != HTML.TAG_option {
            continue
        }

        retourne élément comme *HTML.HTMLOptionElement
    }

    retourne nul
}

noeud_select_calcul_dimensions_intrinsèques :: fonc (noeud: *NoeudDeDispositionSelect, ctx: *ContexteDeFormattage)
{
    élément := noeud.élément comme *HTML.HTMLSelectElement
    assert(élément.local_name == HTML.TAG_select)
    noeud.largeur_intrinsèque = donne_select_labels_width(noeud, ctx)
    noeud.hauteur_intrinsèque = donne_line_height(noeud, ctx)
}

