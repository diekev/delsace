 * \{ */

#portée_fichier

crée_noeud_de_remplacement_image :: fonc (arbre: *ArbreDeDisposition, élément: *HTML.HTMLImageElement) -> *NoeudDeDispositionRemplacement
{
    résultat := arbre.crée_noeud(NoeudDeDispositionRemplacement)
    résultat.élément = élément
    résultat.sur_dessin = noeud_image_sur_dessin
    résultat.sur_dessin_fragment = noeud_image_sur_dessin_fragment
    résultat.sur_possède_ratio_intrinsèque = noeud_image_possède_ratio_intrinsèque
    résultat.sur_possède_largeur_intrinsèque = noeud_image_possède_largeur_intrinsèque
    résultat.sur_possède_hauteur_intrinsèque = noeud_image_possède_hauteur_intrinsèque
    résultat.sur_donne_ratio_intrinsèque = noeud_image_donne_ratio_intrinsèque
    résultat.sur_donne_largeur_intrinsèque = noeud_image_donne_largeur_intrinsèque
    résultat.sur_donne_hauteur_intrinsèque = noeud_image_donne_hauteur_intrinsèque
    retourne résultat
}

noeud_image_possède_ratio_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> bool
{
    saufsi noeud.élément {
        retourne faux
    }

    élément := noeud.élément comme *HTML.HTMLImageElement
    assert(élément.local_name == HTML.TAG_img)

    retourne élément.image_data.donnees != nul
}

noeud_image_possède_largeur_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> bool
{
    retourne noeud_image_possède_ratio_intrinsèque(noeud)
}

noeud_image_possède_hauteur_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> bool
{
    retourne noeud_image_possède_ratio_intrinsèque(noeud)
}

noeud_image_donne_ratio_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> r32
{
    élément := noeud.élément comme *HTML.HTMLImageElement
    assert(élément.local_name == HTML.TAG_img)
    retourne HTML.donne_ratio_intrinsèque(élément)
}

noeud_image_donne_largeur_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> r32
