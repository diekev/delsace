donne_nom_classe_sans_préfixe :: fonc (noeud: *NoeudDeDisposition) -> chaine
{
    résultat := noeud.donne_nom_classe()
    préfixe := "NoeudDeDisposition"
    si résultat.commence_par(préfixe) {
        résultat = avance(résultat, préfixe.taille)
    }
    retourne résultat
}

mesure :: fonc (noeud: *NoeudDeDisposition, ctx: *ContexteDeFormattage, mode: ModeDeFormattage, outrepas_largeur: *OutrepasCotation)
{
    si noeud.table_virtuelle.sur_mesure {
        noeud.table_virtuelle.sur_mesure(noeud, ctx, mode, outrepas_largeur)
    }
}

ajoute_enfant :: fonc (parent: *NoeudDeDisposition, enfant: *NoeudDeDisposition)
{
    si enfant.table_virtuelle.type == CaptionBox && parent.table_virtuelle.type == TableBox {
        ajoute_enfant(parent.parent, enfant)
        retourne
    }

    enfant.parent = parent
    tableau_ajoute(*parent.enfants, enfant)
}

donne_curseur :: fonc (noeud: *NoeudDeDisposition) -> CursorType
{
    saufsi noeud.propriétés {
        retourne CursorType.auto
    }
    retourne noeud.propriétés.donne_valeur_utilisée(IDPropriété.Cursor).cursor
}

divise_en_lignes :: fonc (noeud: *NoeudDeDisposition, enligneuse: *Enligneuse, mode: ModeDeFormattage)
{
    si (noeud.table_virtuelle.type == NoeudDeDispositionTexte || noeud.donne_display().inner_type == Display.Type.Flow) {
        si noeud.table_virtuelle.sur_divise_en_lignes {
            noeud.table_virtuelle.sur_divise_en_lignes(noeud, enligneuse, mode)
            retourne
        }

        pour noeud.enfants {
            divise_en_lignes(it, enligneuse, mode)
        }

        retourne
    }

    noeud.mesure(enligneuse.ctx, mode, nul)
    _ := enligneuse.ajoute_fragment(noeud, noeud.modèle_de_boite.marge.hauteur, noeud.modèle_de_boite.marge.largeur, Fragment.Type.InlineBlock)
}

corrige_hiérarchie :: fonc (noeud: *NoeudDeDisposition, créatrice: *CréatriceArbre)
{
    si noeud.table_virtuelle.sur_correction_hiérarchie {
        noeud.table_virtuelle.sur_correction_hiérarchie(noeud, créatrice)
    }
}

