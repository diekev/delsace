{
    retourne possède_ratio_intrinsèque(noeud)
}

possède_hauteur_intrinsèque :: fonc (noeud: *NoeudDeDispositionRemplacement) -> bool
{
    retourne possède_ratio_intrinsèque(noeud)
}

