ImageIO :: struct {
    données : *r32
    taille_données : z64

    largeur : z32
    hauteur : z32
    composants : z32
}

IMG_ouvre_image :: fonc (chemin: *z8, image: *ImageIO) -> z32 #externe

IMG_ecris_image :: fonc (chemin: *z8, image: *ImageIO) -> z32 #externe

IMG_detruit_image :: fonc (image: *ImageIO) #externe

IMG_calcul_empreinte_floue :: fonc (chemin: *z8, composants_x: z32, composants_y: z32, résultat: *z8, taille_résultat: *z64) #externe

IMG_check_proxy :: fonc () #externe

calcul_empreinte_floue :: fonc (chemin: chaine, composants_x: z32, composants_y: z32) -> chaine
{
    tampon : [2 + 4 + (9 * 9 - 1) * 2 + 1]z8
    taille_résultat : z64

    chaine_c := chaine_c_temp(chemin)

    IMG_calcul_empreinte_floue(chaine_c, composants_x, composants_y, *tampon[0], *taille_résultat)

    résultat := loge_chaine(taille_résultat)

    pour 0 ... taille_résultat - 1 {
        résultat[it] = tampon[it]
    }

    retourne résultat
}

