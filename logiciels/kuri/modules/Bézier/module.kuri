/* ------------------------------------------------------------------------- */
/** \nom Échantillonnage de courbe de Bézier.
 * \{ */

UTILISE_ANALYSEUR_DIFFÉRENTIEL :: vrai

échantillonne_courbe_bézier :: fonc (p0: Point2D(r32), p1: Point2D(r32), p2: Point2D(r32), p3: Point2D(r32), échantillons: []Point2D(r32))
{
    si échantillons.taille == 0 {
        retourne
    }

    début := échantillons.pointeur comme *r32

    #si UTILISE_ANALYSEUR_DIFFÉRENTIEL {
        échantillonne_courbe_bézier(p0.x, p1.x, p2.x, p3.x, début, échantillons.taille comme z32, taille_de(Point2D(r32)) comme z32)
        échantillonne_courbe_bézier(p0.y, p1.y, p2.y, p3.y, début + 1, échantillons.taille comme z32, taille_de(Point2D(r32)) comme z32)
    }
    sinon {
        t := 0.0
        dt := 1.0 / (échantillons.taille comme r32 - 1)

        pour échantillons.taille {
            x := échantillonne_courbe_bézier(p0.x, p1.x, p2.x, p3.x, t)
            y := échantillonne_courbe_bézier(p0.y, p1.y, p2.y, p3.y, t)

            échantillons[indice_it] = Point2D(r32)(x, y)

            t += dt
        }
    }
}

UTILISE_FORMULE_FACTORISÉE :: vrai

échantillonne_courbe_bézier :: fonc (point_a: r32, point_b: r32, point_c: r32, point_d: r32, t: r32) -> r32
{
    t² := t * t
    t³ := t² * t

    #si UTILISE_FORMULE_FACTORISÉE {
        // (1 - t)^3 * x0 + 3 * (1 - t)^2 * t * x1 + (1 - t) * t^2 * x2 + t^3 * x3
        u := 1.0 - t
        u² := u * u
        u³ := u² * u

        a := u³ * point_a
        b := 3.0 * u² * t * point_b
        c := 3.0 * u * t² * point_c
        d := t³ * point_d
        retourne a + b + c + d
    }
    sinon {
        // Développement (et simplification) de la formule factorisée :
        // (3 * x1 + x3 - 3 * x2 - x0) * t^3 + (3 * x0 + 3 * x2 - 6 * x1) * t^2 + (3 * x1 - 3 * x0) * t + x0
        x0 := point_a
        x1 := point_b
        x2 := point_c
        x3 := point_d

        a := 3.0 * x1 + x3 - 3.0 * x2 - x0
        b := 3.0 * x0 + 3.0 * x2 - 6.0 * x1
        c := 3.0 * x1 - 3.0 * x0
        d := x0

        retourne a * t³ + b * t² + c * t + d
    }
}

décale_pointeur :: fonc (ptr: *rien, stride: z32) -> *rien #enligne
{
    a := ptr comme *octet
    a += stride
    retourne a
}

/* Code adapté de Blender.
 * SPDX-License-Identifier: GPL-2.0-or-later */
échantillonne_courbe_bézier :: fonc (q0: r32, q1: r32, q2: r32, q3: r32, p: *r32, i: z32, stride: z32)
{
    f := i comme r32
    rt0 := q0
    rt1 := 3.0 * (q1 - q0) / f
    f *= f
    rt2 := 3.0 * (q0 - 2.0 * q1 + q2) / f
    f *= i comme r32
    rt3 := (q3 - q0 + 3.0 * (q1 - q2)) / f

    q0 = rt0
    q1 = rt1 + rt2 + rt3
    q2 = 2.0 * rt2 + 6.0 * rt3
    q3 = 6.0 * rt3

    pour i + 1 {
        mémoire(p) = q0
        p = décale_pointeur(p, stride) comme *r32
        q0 += q1
        q1 += q2
        q2 += q3
    }
}

calcule_point_sur_courbe :: fonc (point_a: Vec2, point_b: Vec2, décalage: r32, point_c: Vec2, point_d: Vec2) -> Vec2
{
    complément_décalage := 1.0 - décalage
    cd² := complément_décalage * complément_décalage
    cd³ := cd² * complément_décalage

    d² := décalage * décalage
    d³ := d² * décalage

    a := cd³ * point_a
    b := 3.0 * cd² * décalage * point_b
    c := 3.0 * complément_décalage * d² * point_c
    d := d³ * point_d
    retourne a + b + c + d
}

