}

NoeudCodeBloc :: struct {
    empl base : NoeudCode

    expressions : []*NoeudCode
    membres : []*NoeudCodeDéclaration
}

NoeudCodeSi :: struct {
    empl base : NoeudCode

    condition : *NoeudCode
