	numero_colonne := 0
}

NoeudCodeEntêteFonction :: struct {
    empl base : NoeudCode

    nom: chaine

    params_entrée : []*NoeudCodeDéclaration
    params_sortie : []*NoeudCodeDéclaration

	// À FAIRE : remplace par des drapeaux
	est_opérateur : bool
	est_coroutine : bool
}

NoeudCodeCorpsFonction :: struct {
    empl base : NoeudCode

	entête : *NoeudCodeEntêteFonction
