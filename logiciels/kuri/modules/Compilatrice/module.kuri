ajoute_fichier_à_la_compilation :: fonc(espace: *EspaceDeTravail, c: chaine) -> rien #compilatrice

ajoute_chaine_au_module :: fonc (espace: *EspaceDeTravail, module: *Module, c: chaine) #compilatrice

