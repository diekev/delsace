/** \nom Requête et définition d'attributs.
 * \{ */

donne_adresse_attribut :: fonc (programme: n32, nom: chaine) -> z32
{
    nom_c := crée_chaine_c(nom)
    diffère détruit_chaine_c(nom_c)
    retourne glGetAttribLocation(programme, nom_c)
}

