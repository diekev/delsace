GreffonImpression :: struct {
    empl base: GreffonMétaprogramme

    DonnéesPourEspace :: struct {
        créatrice_table_fonctions: CréatriceTableFonction
        table_créée := faux
        fonctions: [..]*NoeudCodeEntêteFonction
    }

    données_pour_espace: [..]DonnéesPourEspace
}

donne_greffon :: fonc () -> *GreffonMétaprogramme
{
    résultat := loge(GreffonImpression)
    résultat.sur_message = greffon_impression_sur_message
    résultat.sur_destruction = greffon_impression_sur_destruction

    données := tableau_ajoute_élément(*résultat.données_pour_espace)
    données.créatrice_table_fonctions.espace = compilatrice_espace_courant()
    données.créatrice_table_fonctions.nom_module = "Fondation"
    données.créatrice_table_fonctions.nom_table_fonctions = "__fonctions_formattages_impression"
    données.créatrice_table_fonctions.données_pour_fonction = fonction_est_valide
    données.créatrice_table_fonctions.génère_fonction_enveloppe = génère_fonction_enveloppe

    retourne résultat
}

#portée_fichier

greffon_impression_sur_message :: fonc (greffon: *GreffonImpression, message: *Message)
{
    si message.genre == GenreMessage.ESPACE_CRÉÉ {
        données := tableau_ajoute_élément(*greffon.données_pour_espace)
        message_espace := message comme *MessageEspaceCréé
        données.créatrice_table_fonctions.espace = message_espace.nouvel_espace
        données.créatrice_table_fonctions.nom_module = "Fondation"
        données.créatrice_table_fonctions.nom_table_fonctions = "__fonctions_formattages_impression"
        données.créatrice_table_fonctions.données_pour_fonction = fonction_est_valide
        données.créatrice_table_fonctions.génère_fonction_enveloppe = génère_fonction_enveloppe
    }
    sinon si message.genre == GenreMessage.TYPAGE_CODE_TERMINÉ {
        message_typage := message comme *MessageTypageCodeTerminé
        si message_typage.code.genre == GenreNoeud.DÉCLARATION_ENTÊTE_FONCTION {
            entête := message_typage.code comme *NoeudCodeEntêteFonction
            si fonction_possède_annotation(entête, "FormattageImpression") {
                données := *greffon.données_pour_espace[message.espace - 1]
                tableau_ajoute(*données.fonctions, entête)
            }
        }
    }
    sinon si est_message_phase(message, PhaseCompilation.TYPAGE_TERMINÉ) {
        données := *greffon.données_pour_espace[message.espace - 1]
        saufsi données.table_créée {
            crée_table_fonctions(données.créatrice_table_fonctions, données.fonctions)
            données.table_créée = vrai
        }
    }
}

greffon_impression_sur_destruction :: fonc (greffon: *GreffonImpression)
{
    pour greffon.données_pour_espace {
        déloge(it.fonctions)
    }
    déloge(greffon.données_pour_espace)
    déloge(greffon)
}

