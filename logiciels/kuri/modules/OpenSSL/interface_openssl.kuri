// Macro en C.
BIO_set_retry_read :: fonc (bio: *BIO) #enligne
{
    BIO_set_flags(bio, BIO_FLAGS_SHOULD_RETRY | BIO_FLAGS_READ)
}

// Macro en C.
BIO_set_retry_write :: fonc (bio: *BIO) #enligne
{
    BIO_set_flags(bio, BIO_FLAGS_SHOULD_RETRY | BIO_FLAGS_WRITE)
}

