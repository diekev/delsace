/* ------------------------------------------------------------------------- */
/** \nom Cercle
 * \{ */

Cercle :: struct ($T: type_de_données) {
    centre_x: T
    centre_y: T
    rayon: T
}

réduis :: fonc (cercle: &Cercle($T), taille: T)
{
    si taille >= cercle.rayon {
        cercle.rayon = 0
    }

    cercle.rayon -= taille
}

/** } */
