{
    "scopeName": "source.kuri",
    "patterns": [
        { "include": "#comment-slash" },
        { "include": "#comment-bloc" },
        { "include": "#directive" },
        { "include": "#control-keyword" },
        { "include": "#other-keyword" },
        { "include": "#string" },
        { "include": "#char" },
        { "include": "#integer" },
        { "include": "#boolean" },
        { "include": "#pointer" },
        { "include": "#typename" }
    ],
    "repository": {
        "comment-slash": {
            "name": "comment.kuri",
            "begin": "//",
            "end": "$"
        },
        "comment-bloc": {
            "name": "comment.kuri",
            "begin": "/\\*",
            "end": "\\*/"
        },
        "directive": {
            "name": "comment.kuri",
            "begin": "#",
            "end": " "
        },
        "control-keyword": {
            "name": "keyword.control.kuri",
            "match": "\\b(retourne|retiens|si|saufsi|sinon|boucle|tantque|répète|pour|dans|arrête|continue|discr|sansarrêt|diffère)\\b"
        },
        "other-keyword": {
            "name": "keyword.other.kuri",
            "match": "\\b(loge|déloge|reloge|struct|énum|énum_drapeau|importe|charge|fonc|corout|transtype|dyn|empl|union|nonsûr|externe|mémoire|info_de|type_de|taille_de|opérateur)\\b"
        },
        "string": {
            "name": "string.quoted.double.kuri",
            "match": "\"([^\"\\\\\\n]|\\\\[^\\n]?)*?[\"\\n]"
        },
        "char": {
            "name": "constant.character.kuri",
            "match": "'([^'\\\\\\n]|\\\\[^\\n]?)*?['\\n]"
        },
        "integer": {
            "name": "constant.numeric.kuri",
            "match": "\\b(0[xXbBoO][0-9A-Fa-f_]+)|([0-9_]+)\\b"
        },
        "boolean": {
            "name": "constant.language.kuri",
            "match": "\\b(faux|vrai)\\b"
        },
        "pointer": {
            "name": "constant.language.kuri",
            "match": "\\bnul\\b"
        },
        "typename": {
            "name": "support.type.kuri",
            "match": "\\b(rien|octet|n8|n16|n32|n64|z8|z16|z32|z64|r16|r32|r64|bool|chaine|eini)\\b"
        }
    }
}
