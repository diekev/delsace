// À FAIRE : appels : paramètres, retours

EOuR :: union nonsûr {
    e : z32 = 127
    f: r32
}

test_union_nonsûr :: fonc () -> bool
{
    // allocation et modification
    e: EOuR

    si e.e != 127 {
        retourne faux
    }

    // À FAIRE(langage) : transtypage des unions nonsûres
    // assignation d'un type, sans accès membre
    // e = 5

    // si e comme z32 != 5 {
    //     retourne faux
    // }

    // e = 6.0

    // si e comme r32 != 6.0 {
    //     retourne faux
    // }

    // assignation d'un type, ave accès membre
    e.e = 5

    si e.e != 5 {
        retourne faux
    }

    e.f = 6.0

    si e.f != 6.0 {
        retourne faux
    }

    // À FAIRE(langage) : transtypage des unions nonsûres
    // transtypage
    // f := e comme z32

    // si f != 0b0_10000001_10000000000000000000000 {
    //     retourne faux
    // }

    // g := e comme r32

    // si g != 6.0 {
    //     retourne faux
    // }

    retourne vrai
}

#assert test_union_nonsûr()

EOuRS :: union {
    e : z32 = 127
    f: r32
}

test_union_sûr :: fonc () -> bool
{
    // allocation et modification
    e: EOuRS

    // À FAIRE(langage) : définit un test pour vérifier qu'une union n'a pas d'initialisation
    // si e != 127 comme z32 {
    //     retourne faux
    // }

    // assignation d'un type, sans accès membre
    // À FAIRE(langage) : ne permet pas de conversion vers r32 depuis un entier_constant dans ce cas.
    e = 5 comme z32

    si e != 5 comme z32 {
        retourne faux
    }

    e = 6.0

    si e != 6.0 {
        retourne faux
    }

    // assignation d'un type, avec accès membre
    e.e = 5

    si e.e != 5 {
        retourne faux
    }

    e.f = 6.0

    si e.f != 6.0 {
        retourne faux
    }

    // transtypage
    // À FAIRE entier_constant échoue ici
    e = 30101991 comme z32
    f := e comme z32

    si f != 30101991 {
        retourne faux
    }

    e = 138.0
    g := e comme r32

    si g != 138.0 {
        retourne faux
    }

    retourne vrai
}

#assert test_union_sûr()

test_union_sûr_anonyme :: fonc () -> bool
{
    // allocation et modification
    e: z32 | r32

    // À FAIRE(langage) : définit un test pour vérifier qu'une union n'a pas d'initialisation
    // si e != 0 comme z32 {
    //     retourne faux
    // }

    // // assignation d'un type, sans accès membre
    e = 5 comme z32

    si e != 5 comme z32 {
        retourne faux
    }

    e = 6.0

    si e != 6.0 {
        retourne faux
    }

    // assignation d'un type, ave accès membre
    // À FAIRE
    // e.0 = 5

    // si e.0 != 5 {
    //     retourne faux
    // }

    // e.1 = 6.0

    // si e.1 != 6.0 {
    //     retourne faux
    // }

    // transtypage
    // À FAIRE entier_constant échoue ici
    e = 30101991 comme z32
    f := e comme z32

    si f != 30101991 {
        retourne faux
    }

    e = 138.0
    g := e comme r32

    si g != 138.0 {
        retourne faux
    }

    retourne vrai
}

#assert test_union_sûr_anonyme()

