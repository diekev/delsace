// Test des conditions booléennes

test_conditions :: fonc () -> z32
{
    // nombre entier
    a := 5

    si !a {
        retourne 1
    }

    saufsi a {
        retourne 2
    }

    a = 0

    si a {
        retourne 3
    }

    // chaine
    chn := ""

    si chn {
        retourne 4
    }

    chn = "0"

    si !chn {
        retourne 5
    }

    saufsi chn {
        retourne 6
    }

    // littérales booléennes
    si !vrai {
        retourne 7
    }

    si faux {
        retourne 8
    }

    saufsi vrai {
        retourne 9
    }

    si vrai && faux {
        retourne 10
    }

    si faux || faux {
        retourne 11
    }

    // pointeur
    ptr : *z32 = nul

    si ptr {
        retourne 12
    }

    ptr = *a

    si !ptr {
        retourne 13
    }

    saufsi ptr {
        retourne 14
    }

    // À FAIRE : tableau

    retourne 0
}

#assert test_conditions() == 0

