// Tests expression mémoire()

test_expressions_mémoire :: fonc () -> bool
{
    a := 5
    b := mémoire(*a)

    si b != 5 {
        retourne faux
    }

    mémoire(*a) = 10

    si a != 10 {
        retourne faux
    }

    S :: struct {
        x: z32
    }

    s: S

    mémoire(*s.x) = 5

    si s.x != 5 {
        retourne faux
    }

    s.x = 10

    b = mémoire(*s.x)

    si b != 10 {
        retourne faux
    }

    retourne vrai
}

#assert test_expressions_mémoire()

