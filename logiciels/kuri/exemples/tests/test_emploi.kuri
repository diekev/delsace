/* ------------------------------------------------------------------------- */
/** \nom Emploi de variable locale.
 * \{ */

test_emploi_variable_locale :: fonc ()
{
    Structure :: struct {
        VALEUR :: 123
        x: z32
    }

    {
        empl s: Structure

        x = 123
        assert(s.x == 123)
    }

    {
        s: Structure
        empl s

        x = 456
        assert(s.x == 456)
    }
}

/** \} */

/* ------------------------------------------------------------------------- */
/** \nom Emploi de type de données.
 * \{ */

test_emploi_énum :: fonc ()
{
    Énum :: énum {
        VALEUR1
        VALEUR2
    }

    empl Énum

    x := VALEUR1
    assert(x == Énum.VALEUR1)
}

