/* ------------------------------------------------------------------------- */
/** \nom Initialisation via exécute.
 * \{ */

test_initialisation_via_exécute :: fonc ()
{
    Base :: struct {
        x := 123
    }

    construit_base :: fonc () -> Base
    {
        retourne Base(456)
    }

    b: Base
    assert(b.x == 123)

    b = #exécute construit_base()
    assert(b.x == 456)
}

/** \} */

