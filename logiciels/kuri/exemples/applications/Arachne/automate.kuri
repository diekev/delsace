Automate :: struct {
	code : []z32
	pointeur : z32
}

état :: fonc(automate : &Automate) -> z32
{
	retourne automate.code[automate.pointeur]
}

avance :: fonc(dyn automate : &Automate) -> rien
{
	automate.pointeur += 1
}

reinitialise :: fonc(dyn automate : &Automate) -> rien
{
	automate.pointeur = 0
}

