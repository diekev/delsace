struct Point2D {
	x := 0.0;
	y := 0.0;
}

struct Rectangle2D {
	gauche := 0.0;
	bas := 0.0;
	droite := 0.0;
	haut := 0.0;
}

struct MondeVersEcran {
	A := 0.0;
	B := 0.0;
	C := 0.0;
	D := 0.0;
}

fonc monde_vers_ecran(monde : &Rectangle2D, ecran : &Rectangle2D) -> MondeVersEcran
{
	dyn mve : MondeVersEcran;

	mve.A = (ecran.droite - ecan.gauche) / (monde.droite - monde.gauche);
	mve.B = (ecran.haut - ecran.bas) / (monde.haut - monde.bas);
	mve.C = ecran.gauche - mve.A * monde.gauche;
	mve.D = ecran.bas - mve.B * monde.bas;

	retourne mve;
}

fonc mappage(mve : &MondeVersEcran, x : r64, y : r64) -> Point2D
{
	dyn pos_ecran : Point2D;

	pos_ecran.x = mve.A * x + mve.C;
	pos_ecran.y = mve.B * y + mve.D;

	retourne pos_ecran;
}

fonc mappage(mve : &MondeVersEcran, p : &Point2D) -> Point2D
{
	retourne mappage(mve, p.x, p.y);
}

