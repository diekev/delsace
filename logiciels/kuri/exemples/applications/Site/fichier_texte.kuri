importe Fondation
importe SysFichier

FichierTexte :: struct {
    nom_court : chaine
    chemin : chaine

    données : chaine

    succès := faux
}

// À FAIRE: rechargement des fichiers, s'ils ont changés
commence_fichier :: fonc (dyn fichier: *FichierTexte) -> rien
{
    chm := construit_chemin(fichier.chemin)
    fichier.données = contenu_fichier_texte(chm)
    fichier.succès = vrai
}