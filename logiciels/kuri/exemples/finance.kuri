#!enligne fonc min(a : $T, b : $T) : $T
{
	si a < b {
		retourne a;
	}

	retourne b;
}

#!enligne fonc max(a : $T, b : $T) : $T
{
	si a > b {
		retourne a;
	}

	retourne b;
}

