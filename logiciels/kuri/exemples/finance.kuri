}

fonc covariance(
		cours1 : []$T,
		moyenne1 : $T,
		cours2 : []$T,
		moyenne2 : $T) : ($T, z64)
{
	taille = min(cours1.taille, cours2.taille);
	dyn res : $T;

	pour i dans 0 ... taille - 1 {
		res += (cours1[i] - moyenne1) * (cours2[i] - moyenne2);
	}

	res /= transtype(taille : $T);

	retourne res, taille;
}
