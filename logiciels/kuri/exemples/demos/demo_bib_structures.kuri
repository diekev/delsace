    }
}

fonc test_tableau() -> rien
{
    imprime_sans_format("==========================================\n")

	dyn t := crée_tableau(transtype(taille_de(z32) : z64))
    diffère { 
        decrée_tableau(t)
        imprime_sans_format("tableau décréé !\n")
    }

    imprime(" ----------- remplissage du tableau\n")

    pour i dans 0...9 {
        v := i * 2
        pousse_tableau(t, @v)
        imprime_sans_format("pousse : ", v, " -> ", mémoire(t), '\n')
    }

    imprime(" ----------- itération du tableau\n")

	debut := transtype(début_tableau(t) : *z32)
	fin   := transtype(fin_tableau(t) : *z32)

    imprime("plage tableau : ", debut, " -> ", fin, '\n')

    pour v dans debut...fin {
        x := mémoire(v)
        imprime_sans_format("iter : ", x, " -> ", mémoire(t), '\n')
    }
}

fonc principale(args : []*z8) -> z32
{
    imprime_sans_format("Il y a ", args.taille, " arguments :\n")

    pour arg dans args {
        chn := converti_chaine_c(arg)
        imprime_sans_format('\t', chn, '\n')
    }

    test_pile()
    test_file()
    test_tableau()
    retourne 0
}
