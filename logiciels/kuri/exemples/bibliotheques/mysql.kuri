importe Fondation
importe MySQL

principale :: fonc (args : []*z8) : z32
{
	dyn mysql : MYSQL;
	mysql_init(@mysql);

	mysql_options(@mysql, mysql_option.MYSQL_READ_DEFAULT_GROUP,"option".pointeur);

	hôte := ""
	utilisateur := ""
	mot_de_passe := ""
	base_de_données := ""

	connexion := mysql_real_connect(@mysql, hôte.pointeur, utilisateur.pointeur, mot_de_passe.pointeur, base_de_données.pointeur, transtype(0: n32), nul, transtype(0: n64));

	si (connexion == nul) {
		e := mysql_error(@mysql)
		chn := converti_chaine_c(e)
		imprime("Une erreur s'est produite lors de la connexion à la BDD : % !\n", chn);
		retourne 1
	}

	imprime("Connexion réussie à la BDD!");

	mysql_close(@mysql);

	retourne 0
}
