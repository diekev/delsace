#si faux
NoeudMatrice :: struct<$T> {
	colonne := 0
	valeur : $T := 0.0
	suivant : *NoeudMatrice := nul
}

crée_noeud :: fonc(colonne : z32, valeur : $T) -> *NoeudMatrice
{
	dyn noeud := loge NoeudMatrice
	noeud.colonne = colonne
	noeud.valeur = valeur
	retourne noeud
}

Vecteur :: struct<$T, N : z32> {
	données : [N]$T
}

copie :: fonc<$T, N : z32>(a : [N]$T, b : [N]$T) -> rien
{
	pour va, i dans a {
		va = b[i]
	}
}

MatriceÉparse :: struct<$T> {
	lignes := []*NoeudMatrice<$T>
}

construit_matrice_éparse :: fonc(nombre_lignes : z32) -> MatriceÉparse<$T>
{
	dyn matrice : MatriceÉparse
	matrice.lignes = loge [lignes]*NoeudMatrice<$T>
	retourne matrice
}

insère :: fonc(matrice : &MatriceÉparse<$T>, idx_ligne : z32, idx_colonne : z32, valeur : $T) -> rien
{
	noeud := matrice.lignes[idx_ligne]

	si noeud == nul {
		matrice.lignes[idx_ligne] = crée_noeud(idx_colonne, valeur)
		retourne
	}

	tantque noeud.suivant != nul {
		noeud = noeud.suivant
	}

	noeud.suivant = crée_noeud(idx_colonne, valeur)
}
#finsi
