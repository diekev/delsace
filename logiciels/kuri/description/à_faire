-- débogueur pour la machine virtuelle
-- langage pour les optimisations (remplacement d'instructions)

struct Allocatrice {
	long nombre_allocations = 0;

	template <typename T>
	T *loge()
	{
		return nullptr;
	}

	template <typename T>
	void deloge(T *&ptr)
	{
		ptr = nullptr;
		return;
	}
};

